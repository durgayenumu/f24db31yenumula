extends layout
 
block content
  h1= title
  p #{title} page is running by Venkata Durga Yenumula 
  - let items = results
  div(class="container-fluid")
    div(class="col m-1")
      each item in items
        - let destination = `dispatch(\"/kites/update?id=${item._id}\")`
        - let destination1 = `dispatch(\"/kites/detail?id=${item._id}\")`
        - let destination2 = `dispatch(\"/kites/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.kite_color}(#{item.material}) is #{item.length}
      
        button.btn.btn-primary.ml-1(onclick=`dispatch('/kites/update?id=${item._id}')`) Update
        button.btn.btn-primary.ml-1(onclick=`dispatch('/kites/detail?id=${item._id}')`) Detail
        button.btn.btn-primary.ml-1(onclick=`dispatch('/kites/delete?id=${item._id}')`) Delete
        br
        br
       
  script.
    function dispatch(path){
      window.location.href=path
    }

  
